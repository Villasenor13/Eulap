<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuccessfulPrompt"
    android:background="@drawable/fingerprintsigningradient"

    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/company"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/eulaplogo"
        />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_gravity="center"
            android:src="@drawable/pinsuccess"
            android:backgroundTint="@color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/ubuntu"
        android:textColor="@color/eulap"
        android:textStyle="bold"
        android:text="Successfully Timed in!"
        android:textSize="30sp"
        />

    <Button
        android:layout_gravity="center"
        android:id="@+id/Exit"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/eulap"
        android:textStyle="bold"
        android:fontFamily="@font/ubuntu"
        android:text="EXIT"
        android:textColor="@color/white"
        android:textSize="25sp"
        />

</LinearLayout>


</RelativeLayout>